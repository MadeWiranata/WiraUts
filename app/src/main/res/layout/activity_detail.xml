<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wira.uts.DetailActivity">

    <EditText
        android:id="@+id/Nilai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/Nilai2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/Nilai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/Nilai1"
        android:layout_alignStart="@+id/Nilai1"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="Judul"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:text="Panjang :"
        android:layout_alignTop="@+id/Nilai2"
        android:layout_above="@+id/Nilai1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/Nilai1"
        android:layout_marginTop="11dp"
        android:text="Lebar :" />

    <Button
        android:id="@+id/BtnLuas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nilai1"
        android:layout_marginTop="94dp"
        android:layout_toLeftOf="@+id/Nilai1"
        android:layout_toStartOf="@+id/Nilai1"
        android:text="Luas" />

    <Button
        android:id="@+id/BtnKeliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Keliling"
        android:layout_alignBaseline="@+id/BtnLuas"
        android:layout_alignBottom="@+id/BtnLuas"
        android:layout_alignRight="@+id/Nilai1"
        android:layout_alignEnd="@+id/Nilai1" />

</RelativeLayout>
